<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/show_text"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#1B1818"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#F5F2F2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_mem_clear"
        android:text="@string/button_memory_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_mem_plus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_text"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/btn_mem_plus"
        android:text="@string/button_memory_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_mem_minus"
        app:layout_constraintLeft_toRightOf="@id/btn_mem_clear"
        app:layout_constraintTop_toBottomOf="@id/show_text"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/btn_mem_minus"
        android:text="@string/button_memory_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_mem_read"
        app:layout_constraintLeft_toRightOf="@id/btn_mem_plus"
        app:layout_constraintTop_toBottomOf="@id/show_text"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/btn_mem_read"
        android:text="@string/button_memory_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/btn_7"
        app:layout_constraintLeft_toRightOf="@id/btn_mem_minus"
        app:layout_constraintTop_toBottomOf="@id/show_text"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/btn_7"
        android:text="@string/button_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_8"
        app:layout_constraintLeft_toRightOf="@id/btn_mem_read"
        app:layout_constraintTop_toBottomOf="@id/show_text"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_8"
        android:text="@string/button_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_9"
        app:layout_constraintLeft_toRightOf="@id/btn_7"
        app:layout_constraintTop_toBottomOf="@id/show_text"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_9"
        android:text="@string/button_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_div"
        app:layout_constraintLeft_toRightOf="@id/btn_8"
        app:layout_constraintTop_toBottomOf="@id/show_text"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_div"
        android:text="@string/button_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_9"
        app:layout_constraintTop_toBottomOf="@id/show_text"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_clear"
        android:text="@string/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_sqrt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_mem_clear"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_sqrt"
        android:text="@string/button_sqrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_mem_plus"
        app:layout_constraintRight_toLeftOf="@id/btn_1_x"
        app:layout_constraintLeft_toRightOf="@id/btn_clear"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_1_x"
        android:text="@string/button__1_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_mem_minus"
        app:layout_constraintLeft_toRightOf="@id/btn_sqrt"
        app:layout_constraintRight_toLeftOf="@id/btn_mem_save"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_mem_save"
        android:text="@string/button_memory_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_4"
        app:layout_constraintLeft_toRightOf="@id/btn_1_x"
        app:layout_constraintTop_toBottomOf="@id/btn_mem_read"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_4"
        android:text="@string/button_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_5"
        app:layout_constraintLeft_toRightOf="@id/btn_mem_save"
        app:layout_constraintTop_toBottomOf="@id/btn_7"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_5"
        android:text="@string/button_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_6"
        app:layout_constraintLeft_toRightOf="@id/btn_4"
        app:layout_constraintTop_toBottomOf="@id/btn_8"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_6"
        android:text="@string/button_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_multiply"
        app:layout_constraintLeft_toRightOf="@id/btn_5"
        app:layout_constraintTop_toBottomOf="@id/btn_9"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_multiply"
        android:text="@string/button_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_6"
        app:layout_constraintTop_toBottomOf="@id/btn_div"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_clear_entry"
        android:text="@string/button_clear_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_clear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_sin"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_sin"
        android:text="@string/button_sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_sqrt"
        app:layout_constraintLeft_toRightOf="@id/btn_clear_entry"
        app:layout_constraintRight_toLeftOf="@id/btn_tan"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_tan"
        android:text="@string/button_tan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_1_x"
        app:layout_constraintLeft_toRightOf="@id/btn_sin"
        app:layout_constraintRight_toLeftOf="@id/btn_cos"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_cos"
        android:text="@string/button_cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_mem_save"
        app:layout_constraintLeft_toRightOf="@id/btn_tan"
        app:layout_constraintRight_toLeftOf="@id/btn_1"
        app:layout_constraintHorizontal_chainStyle="spread"/>

   <Button
       android:id="@+id/btn_1"
       android:text="@string/button_one"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/btn_4"
       app:layout_constraintLeft_toRightOf="@id/btn_cos"
       app:layout_constraintRight_toLeftOf="@id/btn_2"
       app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_2"
        android:text="@string/button_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        app:layout_constraintRight_toLeftOf="@id/btn_3"
        app:layout_constraintTop_toBottomOf="@id/btn_5"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_3"
        android:text="@string/button_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_6"
        app:layout_constraintLeft_toRightOf="@id/btn_2"
        app:layout_constraintRight_toLeftOf="@id/btn_dec"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_dec"
        android:text="@string/button_decrement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_3"
        app:layout_constraintTop_toBottomOf="@id/btn_multiply"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_clear_all"
        android:text="@string/button_clear_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_clear_entry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_percent"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_percent"
        android:text="@string/button_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_sin"
        app:layout_constraintLeft_toRightOf="@id/btn_clear_all"
        app:layout_constraintRight_toLeftOf="@id/btn_square"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_square"
        android:text="@string/button_x_square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_tan"
        app:layout_constraintLeft_toRightOf="@id/btn_percent"
        app:layout_constraintRight_toLeftOf="@id/btn_change_of_sign"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_change_of_sign"
        android:text="@string/button_change_of_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_cos"
        app:layout_constraintLeft_toRightOf="@id/btn_square"
        app:layout_constraintRight_toLeftOf="@id/btn_0"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_0"
        android:text="@string/button_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_point"
        app:layout_constraintLeft_toRightOf="@id/btn_change_of_sign"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/btn_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_point"
        app:layout_constraintTop_toBottomOf="@id/btn_2"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        app:layout_constraintRight_toLeftOf="@id/btn_inc"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/btn_inc"
        android:text="@string/button_increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/btn_equals"
        app:layout_constraintLeft_toRightOf="@id/btn_point"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <Button
        android:id="@+id/btn_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_equals"
        app:layout_constraintLeft_toRightOf="@id/btn_inc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_dec"
        app:layout_constraintHorizontal_chainStyle="spread" />



</android.support.constraint.ConstraintLayout>